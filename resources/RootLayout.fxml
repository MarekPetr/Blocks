<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="root_pane" minHeight="200.0" minWidth="200.0" stylesheets="@application.css" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <HBox maxHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" spacing="10.0">
               <children>
                   <Button fx:id="run_button" mnemonicParsing="false" styleClass="lion-button" stylesheets="@application.css" text="Run" />
                   <Button fx:id="step_button" mnemonicParsing="false" styleClass="lion-button" stylesheets="@application.css" text="Step" />
                   <Button fx:id="reset_step_button" mnemonicParsing="false" styleClass="lion-button" stylesheets="@application.css" text="Reset Step" />
                   <Button fx:id="save_button" mnemonicParsing="false" styleClass="lion-button" stylesheets="@application.css" text="Save" />
                   <Button fx:id="load_button" mnemonicParsing="false" styleClass="lion-button" stylesheets="@application.css" text="Load" />
                   <Button fx:id="clear_button" mnemonicParsing="false" styleClass="lion-button" stylesheets="@application.css" text="Clear" />

               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <SplitPane fx:id="base_pane" dividerPositions="0.5" prefWidth="100">
               <items>
                  <ScrollPane fitToHeight="true" hbarPolicy="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="97.0">
                      <padding>
                          <Insets left="8.0" top="6.0" />
                      </padding>
                      <content>
                        <VBox fx:id="left_pane" spacing="10.0" />
                     </content>
                  </ScrollPane>
                <AnchorPane fx:id="right_pane" />
               </items>
            </SplitPane>
        </items>
      </SplitPane>
   </children>
</fx:root>
